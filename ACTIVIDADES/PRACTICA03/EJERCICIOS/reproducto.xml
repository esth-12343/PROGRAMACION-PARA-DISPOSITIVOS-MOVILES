<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnPlay" android:text="Reproducir" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnPause" android:text="Pausar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnStop" android:text="Detener" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
